{
    "name": "js-stream-dataset-json",
    "version": "0.3.1",
    "description": "Stream Dataset-JSON files",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "test": "jest",
        "build": "rm -rf dist && tsc && cp -r src/interfaces dist/interfaces",
        "publish": "npm run build; npm publish",
        "lint": "eslint . --ext .ts"
    },
    "keywords": [
        "cdisc",
        "dataset-json"
    ],
    "prettier": {
        "tabWidth": 4
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "moduleNameMapper": {
            "^class/(.*)$": "<rootDir>/src/class/$1",
            "^interfaces/(.*)$": "<rootDir>/src/interfaces/$1"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DmitryMK/js-stream-dataset-json.git"
    },
    "author": "Dmitry Kolosov",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@types/node": "^20.16.11",
        "ts-jest": "^29.1.0",
        "typescript": "^5.1.3",
        "husky": "^8.0.0",
        "eslint": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0"
    },
    "dependencies": {
        "JSONStream": "^1.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    }
}
